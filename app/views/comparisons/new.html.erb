<div class="d-flex justify_content-start mb-3">
  <%= link_to "Log in", new_user_session_path,
    target: "_blank",
    class: "btn" "btn-secondary btn-lg px-4 py-2 shadow text-decoration-none"%>


</div>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow p-4">
        <h3 class="text-center mb-4">New Comparison</h3>

        <%= simple_form_for @comparison do |f| %>

          <div class="mb-3">
            <%= f.input :content_a,
              as: :select,
              label: false,
              collection: ["Movie"],
              include_blank: "Choose first item",
              input_html: { class: "form-select" }
            %>
          </div>

          <div class="mb-3">
            <%= f.input :content_b,
              as: :select,
              label: false,
              collection: ["Song"],
              include_blank: "Choose second item",
              input_html: { class: "form-select" }
            %>
          </div>

          <div class="text-center mt-4">
            <%= f.submit "Compare", class: "btn btn-primary btn-lg" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
